<h1>New game</h1>
<ul>
  <% @letters.each do |letter| %>
    <div id="letter-card"><li><%= letter %></li></div>
  <% end %>
</ul>
<form action="/score" method="post" data-turbo="false">
  <label for="fname">What is the longest word you can find?</label><br>
  <div id="input">
    <input type="text" id="word" name="word">
    <input type="submit" value="Play" id="submit">
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
